# ============================================
# Copy this file to .env.local for local development
# DO NOT commit .env.local or import.env to git!
# ============================================

# ============================================
# Firebase Configuration (Required)
# Get from: https://console.firebase.google.com/project/_/settings/general/web
# ============================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ============================================
# API Configuration (Required)
# Local: http://localhost:5000/api/v1
# Production: https://your-backend.vercel.app/api/v1
# ============================================
VITE_API_URL=http://localhost:5000/api/v1

# ============================================
# AI API Keys (Optional - for client-side AI features)
# These are used if you want to call AI APIs directly from frontend
# Otherwise, backend handles AI calls
# ============================================
VITE_GOOGLE_AI_KEY=your_google_ai_key_here
VITE_KIMI_API_KEY=your_kimi_api_key_here
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# PayPal Configuration (Optional - for subscriptions)
# Get from: https://developer.paypal.com/dashboard/
# ============================================
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_PAYPAL_PLAN_ID=your_paypal_plan_id

# ============================================
# Stripe Configuration (Optional - for subscriptions)
# Get from: https://dashboard.stripe.com/test/apikeys
# ============================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
VITE_STRIPE_PRICE_ID=your_stripe_price_id

# ============================================
# USDT Configuration (Optional - for crypto payments)
# Your TRC20 wallet address for USDT payments
# ============================================
VITE_USDT_ADDRESS=your_usdt_trc20_wallet_address
