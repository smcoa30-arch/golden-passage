# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ============================================
# Database (PostgreSQL) - Optional if using Firebase
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=golden_passage
DB_USER=postgres
DB_PASSWORD=password

# ============================================
# Redis Cache - Optional
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# JWT Authentication (Required)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# ============================================
JWT_SECRET=your_super_secret_jwt_key_at_least_32_chars_long
JWT_REFRESH_SECRET=your_refresh_secret_key_at_least_32_chars_long

# ============================================
# AI API Keys (Required for AI Trade Assistant)
# Priority: GOOGLE_AI_KEY (1st) -> KIMI_API_KEY (2nd) -> OPENROUTER_API_KEY (3rd)
# ============================================
GOOGLE_AI_KEY=your_google_ai_key_here
KIMI_API_KEY=your_kimi_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# Payment Providers (Optional - for subscriptions)
# ============================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ============================================
# Email Service (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ============================================
# Azure OpenAI (Optional - alternative AI provider)
# ============================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ============================================
# Azure Vision (Optional - for OCR features)
# ============================================
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com
AZURE_VISION_API_KEY=your_azure_vision_key
